@using PerfumeSite.AddressViewModels
@model AddressViewModel // Modelinizi uygun şekilde ayarlayın
@{
    Layout = "_Layout"; // Layout sayfasını belirtin
}

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: rgba(0, 0, 0, 0.6); /* Arka plan rengi layout ile aynı */
        color: white; /* Yazı rengi beyaz */
    }

    .container {
        margin-top: 50px; /* Üstten boşluk */
    }

    h2 {
        text-align: center; /* Başlığı ortaya al */
        color: gold; /* Başlık rengi */
    }

    .form-control {
        background-color: rgba(0, 0, 0, 0.6); /* Form elemanları arka plan rengi */
        color: black; /* Form elemanları yazı rengi */
    }

    .form-label {
        color: black; /* Etiket rengi */
    }

    .btn-primary {
        background-color: gold; /* Buton arka plan rengi */
        border: none; /* Kenarlık yok */
    }

        .btn-primary:hover {
            background-color: darkgoldenrod; /* Hover durumu için buton rengi */
        }
</style>

<div class="container">
    <h2>Adres Ekle</h2>
    <form asp-controller="User" asp-action="AddAddress" method="post" class="bg-light p-4 rounded">
        <div class="mb-3">
            <label for="Country" class="form-label">Ülke</label>
            <input type="text" id="Country" name="Country" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="City" class="form-label">Şehir</label>
            <input type="text" id="City" name="City" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="District" class="form-label">İlçe</label>
            <input type="text" id="District" name="District" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Neighbourhood" class="form-label">Mahalle</label>
            <input type="text" id="Neighbourhood" name="Neighbourhood" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Street" class="form-label">Sokak</label>
            <input type="text" id="Street" name="Street" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="BuildingNumber" class="form-label">Bina No</label>
            <input type="text" id="BuildingNumber" name="BuildingNumber" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="DoorNumber" class="form-label">Daire No</label>
            <input type="text" id="DoorNumber" name="DoorNumber" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary mx-auto d-block" style="width: 200px;">Ekle</button>
    </form>
</div>
