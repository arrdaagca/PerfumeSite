@using PerfumeSite.UserViewModels
@model UserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Password Reset</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sayfanın tamamını kaplayıp ortalayan yapı */
        html, body {
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #667eea, #764ba2);
            font-family: 'Poppins', sans-serif;
        }

        /* Şifre sıfırlama kutusu */
        .reset-container {
            background: rgba(255, 255, 255, 0.15);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            width: min(90%, 400px); /* Maksimum 400px ama ekran küçüldükçe %90 olacak */
            text-align: center;
            backdrop-filter: blur(15px);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            .reset-container h1 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
                font-weight: bold;
            }

        /* Input alanları */
        .form-floating input {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: none;
            padding: 10px;
            width: 100%; /* Her boyutta uyumlu olacak */
            border-radius: 5px;
            transition: 0.3s ease-in-out;
        }

        .form-floating label {
            color: white;
        }

        .form-floating input:focus {
            background: rgba(255, 255, 255, 0.3);
            color: white;
            border: none;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        /* Buton Stili */
        .btn-reset {
            width: 100%;
            background: linear-gradient(45deg, #ff7eb3, #ff4f8b);
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: bold;
            color: white;
            cursor: pointer;
            transition: 0.3s ease-in-out;
        }

            .btn-reset:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(255, 126, 179, 0.3);
            }

        /* Footer Yazısı */
        .footer-text {
            font-size: 0.9rem;
            margin-top: 1rem;
            opacity: 0.8;
        }
    </style>
</head>
<body>

    <form asp-controller="User" asp-action="ResetPassword" method="post" class="reset-container">
        <h1>🔑 Reset Your Password</h1>

        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email" required>
            <label for="floatingInput">Email address</label>
        </div>

        <button class="btn btn-reset" type="submit">Reset Password</button>

        <input type="hidden" value="@ViewBag.Id" />

        <p class="footer-text">© 2024 PerfumeSite</p>
    </form>

</body>
</html>
