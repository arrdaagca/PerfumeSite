@using PerfumeSite.UserViewModels
@model UserViewModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/User/ForgotPassword/style.css">
    <link rel="stylesheet" href="~/_Layout/style.css">



    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }



    <script>
                function confirmReset(event) {
            event.preventDefault(); // Formun direkt gönderilmesini engelle

            if (confirm("Şifre yenileme bağlantısı e-posta adresinize gönderilecektir. Devam etmek istiyor musunuz?")) {
                event.target.submit(); // Kullanıcı onay verirse formu gönder
            }
        }
    </script>



 
</head>
<body>
    <form asp-controller="User" asp-action="ResetPassword" method="post" class="reset-container" onsubmit="confirmReset(event)">
        <h1>🔑 Şifreni Güncelle</h1>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email" required>
            <label for="floatingInput">Email address</label>
        </div>
        <button class="btn btn-reset" type="submit">Yenileme Linki Gönder</button>
        <input type="hidden" value="@ViewBag.Id" />
        <p class="footer-text">© 2024 PerfumeSite Tüm Hakları Saklıdır</p>
    </form>
</body>
</html>
