@using PerfumeSite.UserViewModels
@model UserLoginViewModel

@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/Login/dist/style.css">



<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="login-container">
        <h2>Giriş Yap</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Hata!</strong> Email veya Şifre Yanlış.Ama hangisi söylemem.
            </div>
        }

        <form asp-controller="User" asp-action="Login" method="post">
            <div class="input-group">
                <label for="email">Email Adresi</label>
                <input type="email" id="email" name="email" required asp-for="Email">
            </div>
            <div class="input-group">
                <label for="password">Şifre</label>
                <input type="password" id="password" name="password" required asp-for="Password">
            </div>
            <button type="submit" class="login-button">Giriş Yap</button>
            <div class="footer">
                <a asp-controller="User" asp-action="ForgotPassword" class="forgot-password">Şifremi Unuttum?</a>
                <a asp-controller="User" asp-action="SignUp" class="register">Üye Ol</a>
            </div>
        </form>
    </div>
</div>
