<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/Admin/Layout/style.css">
    <link rel="stylesheet" href="~/Admin/Layout/style.js">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

   
</head>

<body>

    <!-- Üst Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand ms-3" asp-controller="Admin" asp-action="AdminHomePage">Admin Panel</a>

            <div class="d-flex align-items-center me-3">
                <div class="icon-container">
                    <a href="#" class="nav-link">
                        <i class="fas fa-bell fa-lg"></i>
                        <span class="badge" id="notificationCount">3</span>
                    </a>
                </div>

                <div class="icon-container">
                    <a href="#" class="nav-link">
                        <i class="fas fa-envelope fa-lg"></i>
                        <span class="badge" id="messageCount">2</span>
                    </a>
                </div>

                <div class="icon-container">
                    <a href="#" class="nav-link">
                        <i class="fas fa-user-circle fa-lg"></i> Profilim
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <!-- Üst Navbar Sonu -->
    <!-- Sol Sidebar -->
    <div class="sidebar">
        <a asp-controller="Admin" asp-action="Users"><i class="fas fa-users"></i> Kullanıcılar</a>
        <a asp-controller="Admin" asp-action="ProductManagement"><i class="fas fa-box"></i> Ürün Yönetimi</a>
        <a asp-controller="User" asp-action="Login"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
    </div>
    <!-- Sol Sidebar Sonu -->
    <!-- Sayfa İçeriği -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Bootstrap ve Popper.js -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bildirim ve Mesaj Sayısını Dinamik Olarak Güncelle -->

</body>
</html>
