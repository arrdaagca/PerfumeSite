@using PerfumeSite.ProductViewModels
@model List<ProductViewModel>
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2>Ürün Listesi</h2>

    <div class="d-flex gap-2 mb-3">
        <form asp-controller="Product" asp-action="AddProduct" method="get">
            <button class="btn btn-primary">Yeni Ürün Ekle</button>
        </form>

        <form asp-controller="Category" asp-action="AddCategory" method="get">
            <button class="btn btn-success">Yeni Kategori Ekle</button>
        </form>

        <form asp-controller="Brand" asp-action="AddBrand" method="get">
            <button class="btn btn-info">Yeni Marka Ekle</button>
        </form>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Açıklama</th>
                <th>Ürün Resmi</th>
                <th>Marka</th>
                <th>Kategori</th>
                <th>Oluşturulma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@item.Image" alt="@item.Name" style="width: 100px; height: auto;" />
                    </td>
                    <td>@item.BrandId</td>
                    <td>@item.CategoryId</td>
                    <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateProductModal">Güncelle</button>
                        <button class="btn btn-danger" onclick="deleteProduct(@item.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
