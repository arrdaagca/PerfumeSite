
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2>Ürün Listesi</h2>

    <!-- Butonları yan yana hizalama -->
    <div class="d-flex gap-2 mb-3">
        <form asp-controller="Product" asp-action="AddProduct" method="get">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">Yeni Ürün Ekle</button>
        </form>

        <form asp-controller="Category" asp-action="AddCategory" method="get">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">Yeni Kategori Ekle</button>
        </form>

        <form asp-controller="Brand" asp-action="AddBrand" method="get">
            <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#addBrandModal">Yeni Marka Ekle</button>
        </form>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Price</td>
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateProductModal">Güncelle</button>
                    <button class="btn btn-danger" onclick="deleteProduct()">Sil</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
