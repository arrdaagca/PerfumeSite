@using PerfumeSite.CreditCardViewModels
@model AddCreditCardViewModel

@{
    var userId = Context.Session.GetInt32("Id");
}


@{
    ViewData["Title"] = "Kredi Kartı Ekle";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold text-uppercase text-primary">💳 Kredi Kartı Ekle</h2>
        <p class="text-muted">Lütfen kredi kartı bilgilerinizi eksiksiz doldurun.</p>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form method="post" asp-controller="CreditCard" asp-action="AddCreditCard" method="post">
                        <div class="mb-3">
                            <label for="creditCardNumber" class="form-label">Kredi Kartı Numarası</label>
                            <input type="text" class="form-control" asp-for="CreditCardNumber" maxlength="16" required placeholder="**** **** **** ****">
                        </div>
                        
                        <div class="mb-3">
                            <label for="creditCardValidityDate" class="form-label">Son Kullanma Tarihi</label>
                            <input type="text" class="form-control" asp-for="CreditCardValidityDate" placeholder="MM/YY" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="creditCardVerificationCode" class="form-label">Güvenlik Kodu (CVV)</label>
                            <input type="text" class="form-control" asp-for="CreditCardVerificationCode" maxlength="3" required placeholder="***">
                        </div>
                       
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index", "CreditCard")" class="btn btn-secondary">⬅️ Geri Dön</a>
                                <button type="submit" class="btn btn-success">💾 Kaydet</button>
                            </div>
                        <input hidden value="@userId" name="UserId" />
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">



