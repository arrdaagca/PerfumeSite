@using PerfumeSite.CreditCardViewModels
@model List<CreditCardViewModel>




@{
    ViewData["Title"] = "Kredi Kartı Bilgilerim";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold text-uppercase text-primary">💳 Kredi Kartı Bilgilerim</h2>
        <p class="text-muted">Kredi kartı bilgilerinizi burada yönetebilirsiniz.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Kayıtlı kredi kartları varsa listele -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h5 class="card-title">📋 Kayıtlı Kredi Kartları</h5>
                        @foreach (var card in Model)
                        {
                            <div class="mb-3 border p-3 rounded bg-light">
                                <ul class="list-unstyled mb-0">
                                    <li><strong>Kredi Kartı Numarası:</strong> **** **** **** @card.CreditCardNumber.Substring(card.CreditCardNumber.Length - 4)</li>
                                    <li><strong>Son Kullanma Tarihi:</strong> @card.CreditCardValidityDate</li>
                                    <li><strong>Güvenlik Kodu:</strong>@card.CreditCardVerificationCode</li>
                                </ul>
                            </div>
                        }
                        <a href="@Url.Action("AddCreditCard", "CreditCard")" class="btn btn-primary mt-3">Yeni Kart Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Kayıtlı kredi kartı yoksa mesaj göster ve ekleme butonu -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="alert alert-warning text-center">
                    <p class="mb-0">⚠️ Kayıtlı kredi kartınız bulunmamaktadır.</p>
                </div>
                <div class="text-center">
                    <a asp-controller="CreditCard" asp-action="AddCreditCard" class="btn btn-success btn-lg">Kredi Kartı Ekle</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
