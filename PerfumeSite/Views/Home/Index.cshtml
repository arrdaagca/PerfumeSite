@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parfüm Kategorileri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/User/Home/Index/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <aside class="sidebar">
        <div class="sidebar-dropdown">
            <a href="#" class="category-button">
                <i class="fa-solid fa-list"></i><span> Tüm Kategoriler</span>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#"><i class="fas fa-male"></i> Erkek Parfümleri</a></li>
                <li><a class="dropdown-item" href="#"><i class="fas fa-female"></i> Kadın Parfümleri</a></li>
                <li><a class="dropdown-item" href="#"><i class="fas fa-genderless"></i> Unisex Parfümler</a></li>
                <li><a class="dropdown-item" href="#"><i class="fas fa-star"></i> En Çok Satanlar</a></li>
            </ul>
        </div>
        <div class="sidebar-dropdown">
            <a href="#" class="category-button">
                <i class="fa-solid fa-filter"></i><span> Sırala</span>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Varsayılan</a></li>
                <li><a class="dropdown-item" href="#">Fiyat: Düşükten Yükseğe</a></li>
                <li><a class="dropdown-item" href="#">Fiyat: Yüksekten Düşüğe</a></li>
                <li><a class="dropdown-item" href="#">Popülerlik</a></li>
            </ul>
        </div>
        <div class="sidebar-dropdown">
            <a href="#" class="category-button">
                <i class="fa-solid fa-tags"></i><span> Marka</span>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Tümü</a></li>
                <li><a class="dropdown-item" href="#">Marka 1</a></li>
                <li><a class="dropdown-item" href="#">Marka 2</a></li>
                <li><a class="dropdown-item" href="#">Marka 3</a></li>
            </ul>
        </div>
        <div class="sidebar-dropdown">
            <a href="#" class="category-button">
                <i class="fa-solid fa-dollar-sign"></i><span> Fiyat</span>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Tümü</a></li>
                <li><a class="dropdown-item" href="#">0 - 50 TL</a></li>
                <li><a class="dropdown-item" href="#">51 - 100 TL</a></li>
                <li><a class="dropdown-item" href="#">101 - 200 TL</a></li>
            </ul>
        </div>
    </aside>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.sidebar-dropdown').forEach(function(dropdown) {
            dropdown.addEventListener('mouseenter', function() {
                this.querySelector('.dropdown-menu').style.display = 'block';
            });
            dropdown.addEventListener('mouseleave', function() {
                this.querySelector('.dropdown-menu').style.display = 'none';
            });
        });
    </script>
</body>
</html>
