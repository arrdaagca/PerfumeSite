@using PerfumeSite.UserViewModels
@model UserViewModel



<form asp-controller="User" asp-action="UpdatePassword" method="post">
    <h1 class="h3 mb-3 fw-normal">New Password</h1>
    <div class="form-floating">
        <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Password">
        <label for="floatingInput">New Password</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Password Reset</button>
    <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
    <input hidden value="@ViewBag.id" name="id" />
</form>

