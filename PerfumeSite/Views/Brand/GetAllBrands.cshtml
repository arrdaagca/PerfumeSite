@using PerfumeSite.BrandViewModels
@model List<AddBrandViewModel>

@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/Brand/GetAllBrands/style.css" />

<div class="brand-container">
    <h2 class="brand-title">Marka Listesi</h2>

    <div class="brand-actions">
        <form asp-controller="Brand" asp-action="AddBrand" method="get">
            <button class="btn btn-add">+ Yeni Marka Ekle</button>
        </form>
    </div>

    <div class="table-wrapper">
        <table class="brand-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Marka Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <form asp-controller="Brand" asp-action="UpdateBrand" method="get">
                                <button type="submit" class="btn btn-edit">Güncelle</button>
                                <input type="hidden" value="@item.Id" name="id" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
