@using PerfumeSite.UserViewModels
@model List<UserListViewModel>

@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Kullanıcılar</title>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            margin-top: 40px;
        }

        .table-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background: #343a40;
            color: white;
        }

        .btn-custom {
            background-color: #ff758c;
            color: white;
            border: none;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background-color: #ff5e78;
            }
    </style>
</head>

<body>

    <div class="container">
        <div class="table-container">
            <h2 class="mb-4 text-center">Kullanıcı Yönetimi</h2>

            <table class="table table-bordered table-hover">
                <thead class="text-center">
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-mail</th>
                        <th>Hesap Oluşturma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Email</td>
                            <td>@item.CreatedDate</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i>Görüntüle</button>
                                <button class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i>Düzenle</button>
                            </td>
                        </tr>
                    }


                    <!-- Daha fazla kullanıcı eklenebilir -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
