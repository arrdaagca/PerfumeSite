@using PerfumeSite.UserViewModels
@model UserLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/Login/dist/style.css">

    <title>Login Theme</title>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</head>
<body>
    <form asp-controller="User" asp-action="Login" method="post">
        <div class="login-container">
            <h2>Login</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Hata!</strong> Yanlış email veya şifre.
                </div>
            }



            <div class="input-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required asp-for="Email">
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required asp-for="Password">
            </div>
            <button class="login-button">Login</button>
            <div class="footer">
                <a asp-controller="User" asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
                <a asp-controller="User" asp-action="SignUp" class="register">Sign Up</a>
            </div>
        </div>
    </form>
</body>
</html>
