@using PerfumeSite.AddressViewModels
@model List<AddressViewModel> // Model türünüze göre güncelleyin
@{
    ViewData["Title"] = "Adres Bilgileri";
    Layout = "_Layout"; // Layout dosyanızın ismi
}

<style>
    body{
        background-color: rgba(0, 0, 0, 0.6);
    }
    .address-card {
        background-color: rgba(255, 255, 255, 0.8); /* Arka plan rengi */
        border-radius: 10px; /* Kenar yuvarlama */
        padding: 20px; /* İç boşluk */
        margin-bottom: 20px; /* Alt boşluk */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
    }

        .address-card strong {
            color: #333; /* Kalın yazı rengi */
        }

    .add-address-button {
        display: block;
        width: 30%;
        background-color: rgba(0, 0, 0, 0.6); /* Buton arka plan rengi */
        
        margin: 20px auto;
        color: gold; /* Yazı rengi sarı */
        border: none;
        padding: 15px;
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        border-radius: 10px;
        transition: 0.3s;
    }

        .add-address-button:hover {
            background-color: darkgoldenrod; /* Hover rengi */
        }
</style>

<div class="container mt-5">
    <h2 class="text-warning mb-4 text-center">Adres Bilgilerim</h2>

    @if (Model != null && Model.Any())
    {
        @foreach (var address in Model)
        {
            <div class="address-card">
                <ul class="list-unstyled mb-0">
                    <li><strong>Ülke:</strong> @address.Country</li>
                    <li><strong>Şehir:</strong> @address.City</li>
                    <li><strong>İlçe:</strong> @address.District</li>
                    <li><strong>Mahalle:</strong> @address.Neighbourhood</li>
                    <li><strong>Sokak:</strong> @address.Street</li>
                    <li><strong>Bina No:</strong> @address.BuildingNumber</li>
                    <li><strong>Daire No:</strong> @address.DoorNumber</li>
                </ul>
            </div>
        }
    }
    else
    {
        <p class="text-center">Henüz adres bilgisi bulunmamaktadır.</p>
        <div class="text-center">
            <a asp-asp-controller="Address" asp-action="AddAddress" class="add-address-button">Adres Ekle</a>
        </div>
    }
</div>
