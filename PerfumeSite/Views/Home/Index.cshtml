@{
    var userId = Context.Session.GetInt32("Id");
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfume</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome (Güncellenmiş Sürüm) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Genel Buton Hover Efekti */
        .nav-link-custom {
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            color: black;
        }

            .nav-link-custom i {
                transition: all 0.3s ease;
                font-size: 20px;
            }

            /* Üzerine Gelince Efektler */
            .nav-link-custom:hover {
                color: red !important;
            }

                .nav-link-custom:hover i {
                    color: red !important;
                    transform: scale(1.1);
                    font-weight: 900;
                }
    </style>
</head>

<body>

    <!-- Navbar Başlangıç -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container d-flex align-items-start">

            <!-- Sol Üst: Site Adı ve Kategoriler -->
            <div class="d-flex flex-column">
                <a class="navbar-brand fw-bold mb-2" href="/">Perfume</a>

                <!-- Tüm Kategoriler Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown">
                        Tüm Kategoriler
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Erkek Parfümleri</a></li>
                        <li><a class="dropdown-item" href="#">Kadın Parfümleri</a></li>
                        <li><a class="dropdown-item" href="#">Unisex Parfümler</a></li>
                    </ul>
                </div>
            </div>

            <!-- Sağ Üst: Menü -->
            <div class="ms-auto d-flex align-items-center">

                @if (userId == null)
                {
                    <a class="nav-link-custom me-3" asp-controller="User" asp-action="Login">
                        <i class="fa-regular fa-user"></i> Giriş Yap
                    </a>
                }

                else
                {
                <a class="nav-link-custom" asp-controller="User" asp-action="MyAccount">
                    <i class="fa-regular fa-circle-user"></i> Hesabım
                </a>
                }
              
                
                <a class="nav-link-custom me-3" asp-controller="Favorites" asp-action="Index">
                    <i class="fa-regular fa-heart"></i> Favorilerim
                </a>

                <a class="nav-link-custom me-3" asp-controller="Cart" asp-action="Index">
                    <i class="fa-solid fa-cart-shopping"></i> Sepetim
                </a>
               
            </div>

        </div>
    </nav>
    <!-- Navbar Bitiş -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
