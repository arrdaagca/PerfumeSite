@using PerfumeSite.UserViewModels
@model List<UserViewModel>

@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Kullanıcılar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            margin-top: 40px;
        }

        .table-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background: #343a40;
            color: white;
        }

        .btn-custom {
            background-color: #ff758c;
            color: white;
            border: none;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background-color: #ff5e78;
            }
    </style>
</head>

<body>

    <div class="container">
        <div class="table-container">
            <h2 class="mb-4 text-center">Kullanıcı Yönetimi</h2>

            <table class="table table-bordered table-hover">
                <thead class="text-center">
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Bakiye</th>
                        <th>Hesap Oluşturma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Ahmet</td>
                        <td>Yılmaz</td>
                        <td>₺5000</td>
                        <td>2024-02-10</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i> Görüntüle</button>
                            <button class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i> Düzenle</button>
                            <button class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> Sil</button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Mehmet</td>
                        <td>Demir</td>
                        <td>₺3200</td>
                        <td>2023-11-15</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i> Görüntüle</button>
                            <button class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i> Düzenle</button>
                            <button class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> Sil</button>
                        </td>
                    </tr>
                    <!-- Daha fazla kullanıcı eklenebilir -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
