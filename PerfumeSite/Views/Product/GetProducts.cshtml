@using PerfumeSite.ProductViewModels
@model List<ProductViewModel>
@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/Product/GetProducts/style.css" /> 

<div class="container mt-4">
    <h2 class="text-center">Ürün Listesi</h2>

    <div class="d-flex gap-2 mb-3 justify-content-center">
        <form asp-controller="Product" asp-action="AddProduct" method="get">
            <button class="btn btn-primary">Yeni Ürün Ekle</button>
        </form>

        <form asp-controller="Category" asp-action="AddCategory" method="get">
            <button class="btn btn-success">Yeni Kategori Ekle</button>
        </form>

        <form asp-controller="Brand" asp-action="AddBrand" method="get">
            <button class="btn btn-info">Yeni Marka Ekle</button>
        </form>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Açıklama</th>
                <th>Ürün Resmi</th>
                <th>Marka</th>
                <th>Kategori</th>
                <th>Oluşturulma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@item.Image" alt="@item.Name" class="product-image" />
                    </td>
                    <td>@item.BrandId</td>
                    <td>@item.CategoryId</td>
                    <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-controller="Product" asp-action="UpdateProduct" method="get" style="display: inline;">
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                            <input type="hidden" value="@item.Id" name="id" />
                        </form>

                        <form asp-controller="Product" asp-action="DeleteProduct" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Sil</button>
                            <input type="hidden" value="@item.Id" name="id" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
