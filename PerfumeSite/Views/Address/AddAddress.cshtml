@using PerfumeSite.AddressViewModels
@model AddressViewModel






<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adres Ekle</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome (İkonlar için) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Sayfa Genel Stili */
        body {
            background: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .address-container {
            background: white;
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .submit-btn {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 8px;
            border: none;
            background: #007bff;
            color: white;
            transition: all 0.3s ease;
        }

            .submit-btn:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="address-container">
            <h3 class="text-center mb-4"><i class="fa-solid fa-map-location-dot"></i> Adres Ekle</h3>

            <form id="addressForm" asp-controller="Address" asp-action="AddAddress" method="post">
                <!-- Ülke -->
                <div class="mb-3">
                    <label class="form-label">Ülke</label>
                    <select class="form-control" id="country" asp-for="Country">
                        <option value="">Seçiniz</option>
                        <option value="Türkiye">Türkiye</option>
                        <option value="ABD">ABD</option>
                        <option value="Almanya">Almanya</option>
                    </select>
                </div>

                <!-- Şehir -->
                <div class="mb-3">
                    <label class="form-label">Şehir</label>
                    <input type="text" class="form-control" id="city" placeholder="Şehir" asp-for="City">
                </div>

                <!-- İlçe -->
                <div class="mb-3">
                    <label class="form-label">İlçe</label>
                    <input type="text" class="form-control" id="district" placeholder="İlçe" asp-for="District">
                </div>

                <!-- Mahalle -->
                <div class="mb-3">
                    <label class="form-label">Mahalle</label>
                    <input type="text" class="form-control" id="neighbourhood" placeholder="Mahalle" asp-for="Neighbourhood">
                </div>

                <!-- Sokak -->
                <div class="mb-3">
                    <label class="form-label">Sokak</label>
                    <input type="text" class="form-control" id="street" placeholder="Sokak" asp-for="Street">
                </div>

                <!-- Bina No -->
                <div class="mb-3">
                    <label class="form-label">Bina Numarası</label>
                    <input type="number" class="form-control" id="buildingNumber" placeholder="Bina No" asp-for="BuildingNumber">
                </div>

                <!-- Kapı No -->
                <div class="mb-3">
                    <label class="form-label">Kapı Numarası</label>
                    <input type="number" class="form-control" id="doorNumber" placeholder="Kapı No" asp-for="DoorNumber">
                </div>


              
                    <input type="hidden" name="UserId" value="@Context.Session.GetInt32("Id")" />
                



               
                <button type="submit" class="submit-btn">Kaydet</button>
            </form>
        </div>
    </div>

  

</body>
</html>

