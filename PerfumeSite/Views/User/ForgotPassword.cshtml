@using PerfumeSite.UserViewModels
@model UserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/User/ForgotPassword/style.css">
    <title>Password Reset</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
       
    </style>
</head>
<body>

    <form asp-controller="User" asp-action="ResetPassword" method="post" class="reset-container">
        <h1>🔑 Reset Your Password</h1>

        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email" required>
            <label for="floatingInput">Email address</label>
        </div>

        <button class="btn btn-reset" type="submit">Reset Password</button>

        <input type="hidden" value="@ViewBag.Id" />

        <p class="footer-text">© 2024 PerfumeSite</p>
    </form>

</body>
</html>
