@using PerfumeSite.BrandViewModels
@model AddBrandViewModel

@{
    Layout = "_AdminLayout"; // Admin panelinin genel şablonunu kullan
}

<div class="container mt-4">
    <h2>Yeni Marka Ekle</h2>

    <form asp-controller="Brand" asp-action="AddBrand" method="post">
        <div class="mb-3">
            <label  class="form-label">Marka Adı</label>
            <input type="text" class="form-control" asp-for="Name" name="Name" required>
        </div>
        <button type="submit" class="btn btn-success">Ekle</button>
        <a asp-controller="Admin" asp-action="GetProducts" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
