@using PerfumeSite.CategoryViewModels
@model AddCategoryViewModel



@{
    Layout = "_AdminLayout";
}


<div class="address-page">
    <div class="address-form-container">
        <h2>Kategori Güncelle</h2>
        <form asp-controller="Category" asp-action="UpdateCategory" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Kategori Adı</label>
                        <input type="text" name="name" class="form-control" asp-for="Name" required />
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Güncelle</button>
                <input hidden value="@Model.Id" name="id" />
        </form>
    </div>
</div>
