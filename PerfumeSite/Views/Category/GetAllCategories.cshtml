@using PerfumeSite.CategoryViewModels
@model List<AddCategoryViewModel>

@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/Category/GetAllCategories/style.css" />

<div class="category-container">
    <h2 class="category-title">Kategori Listesi</h2>

    <div class="category-actions">
        <form asp-controller="Category" asp-action="AddCategory" method="get">
            <button class="btn-add">+ Yeni Kategori Ekle</button>
        </form>
    </div>

    <div class="table-wrapper">
        <table class="category-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <form asp-controller="Category" asp-action="UpdateCategory" method="get" class="inline-form">
                                <button type="submit" class="btn-edit">Güncelle</button>
                                <input type="hidden" value="@item.Id" name="id" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
