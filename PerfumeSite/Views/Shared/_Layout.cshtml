
@{
	var userId = Context.Session.GetInt32("Id");
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Perfume - Lüks Parfüm Mağazası</title>

    <link rel="stylesheet" href="~/_Layout/style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false) 
    <style>
      
    </style>
</head>
<body class="layoutbody">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Perfume</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <form class="search-bar">
                    <input type="text" placeholder="Aradığınız ürün,kategori veya markayı yazınız">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
                <ul class="navbar-nav">
                    @if (userId == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="MyAccount">
                                <i class="fas fa-user"></i> Hesabım
                            </a>
                        </li>
                    }

                    @if (userId == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">
                                <i class="fas fa-heart"></i> Favorilerim
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Favorite" asp-action="Favorites" >
                                <i class="fas fa-heart"></i> Favorilerim
                            </a>
                        </li>
                    }

                    @if (userId == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">
                                <i class="fas fa-shopping-cart"></i> Sepetim
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-shopping-cart"></i> Sepetim
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-5">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
